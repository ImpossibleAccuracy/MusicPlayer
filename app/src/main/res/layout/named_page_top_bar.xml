<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bar_height"
    android:background="@color/topBarColor"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingHorizontal="10dp">

    <com.example.musicplayer.widget.BackButton
        android:id="@+id/BackButton"
        android:layout_width="@dimen/back_button_size"
        android:layout_height="match_parent"
        android:focusable="false" />

    <TextView
        android:id="@+id/PageNameView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:textSize="@dimen/normal_text_size"
        android:paddingHorizontal="20dp"
        android:text="@string/page_name_placeholder" />

    <com.example.musicplayer.widget.TopBarButton
        android:id="@+id/AddButton"
        android:layout_width="@dimen/little_icon_size"
        android:layout_height="@dimen/little_icon_size" />
</LinearLayout>
