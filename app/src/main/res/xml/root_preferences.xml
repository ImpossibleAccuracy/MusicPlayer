<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="System">

        <CheckBoxPreference
            app:defaultValue="false"
            app:key="skip_short_tracks"
            app:title="@string/hide_short_tracks" />

        <ListPreference
            app:entries="@array/Themes"
            app:entryValues="@array/Themes"
            app:key="theme"
            app:title="Theme" />

    </PreferenceCategory>

</PreferenceScreen>
